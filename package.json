{
  "name": "agent-instructor",
  "displayName": "Agent Instructor",
  "description": "A VS Code extension to analyze agent instructions.",
  "version": "0.0.9",
  "publisher": "Stephan-Bisser",
  "repository": {
    "type": "git",
    "url": "https://github.com/stephanbisser/agent-instructor.git"
  },
  "icon": "assets/Agent-Instructor-128.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onCommand:agentInstructor.analyze",
    "onCommand:agentInstructor.generate",
    "onCommand:agentInstructor.copilotConnectors",
    "onCommand:agentInstructor.setGraphClientSecret",
    "onCommand:agentInstructor.clearGraphClientSecret"
  ],
  "extensionDependencies": [
    "ms-vscode.azure-account"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agentInstructor.analyze",
        "title": "Agent Instructor: Analyze Instructions"
      },
      {
        "command": "agentInstructor.generate",
        "title": "Agent Instructor: Generate Instructions"
      },
      {
        "command": "agentInstructor.copilotConnectors",
        "title": "Agent Instructor: List Copilot Connectors"
      },
      {
        "command": "agentInstructor.setGraphClientSecret",
        "title": "Agent Instructor: Set Graph Client Secret"
      },
      {
        "command": "agentInstructor.clearGraphClientSecret",
        "title": "Agent Instructor: Clear Graph Client Secret"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Agent Instructor Configuration",
      "properties": {
        "agentInstructor.endpointType": {
          "type": "string",
          "enum": [
            "openai",
            "azure"
          ],
          "default": "openai",
          "description": "Choose the endpoint type: 'openai' for regular OpenAI or 'azure' for Azure OpenAI."
        },
        "agentInstructor.endpointUrl": {
          "type": "string",
          "default": "",
          "description": "The endpoint URL for your LLM API. For Azure OpenAI, provide the full URL (including deployment ID and API version). For OpenAI, leave blank to use the default endpoint."
        },
        "agentInstructor.apiKey": {
          "type": "string",
          "default": "",
          "description": "The API key for your LLM service."
        },
        "agentInstructor.maxTokens": {
          "type": "number",
          "default": 1000,
          "description": "Maximum number of tokens to generate in the response",
          "minimum": 1,
          "maximum": 4096
        },
        "agentInstructor.graph.tenantId": {
          "type": "string",
          "default": "",
          "markdownDescription": "Tenant ID for Microsoft Graph app-only authentication (client credentials)."
        },
        "agentInstructor.graph.clientId": {
          "type": "string",
          "default": "",
          "markdownDescription": "Client ID (Application ID) for Microsoft Graph app-only authentication. The client secret is stored securely via SecretStorage."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "watch:tsc": "tsc -w",
    "watch:esbuild": "node esbuild.js --watch",
    "watch-tests": "npm run watch:tsc",
    "graph:appOnly": "node scripts/test-graph-app-only.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^14.14.37",
    "@types/vscode": "^1.60.0",
    "eslint": "^7.22.0",
    "typescript": "^4.0.0",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "axios": "^1.7.9"
  }
}
